{
  "version": 2,
  "builds": [
    {
      "src": "api.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "GROQ_API_KEY": "<your_groq_api_key>",
    "CHROMA_CLOUD_API_KEY": "<your_chroma_cloud_api_key>",
    "CHROMA_CLOUD_TENANT": "<your_chroma_cloud_tenant_id>"
  }
} 